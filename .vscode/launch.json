{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: uvicorn (no reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.app.main:app", "--host", "0.0.0.0", "--port", "8000"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "API: uvicorn (reload src only)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["src.app.main:app", "--reload", "--reload-dir", "src", "--host", "0.0.0.0", "--port", "8000"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
